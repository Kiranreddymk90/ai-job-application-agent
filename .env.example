# ===== SECURITY =====
ENCRYPTION_KEY=your-encryption-key-here
SECRET_KEY=your-secret-key

# ===== OPENAI =====
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# ===== DATABASE =====
DATABASE_URL=sqlite:///data/applications.db
MONGODB_URI=mongodb://localhost:27017/job_agent

# ===== NAUKRI =====
NAUKRI_EMAIL=your.email@example.com
NAUKRI_PASSWORD=your-password
NAUKRI_ENABLED=true

# ===== LINKEDIN =====
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your-password
LINKEDIN_ENABLED=true

# ===== INDEED =====
INDEED_ENABLED=true
INDEED_API_KEY=optional

# ===== BROWSER =====
HEADLESS_BROWSER=true
BROWSER_TYPE=chrome
DOWNLOAD_DIR=data/downloads
BROWSER_TIMEOUT=30
RETRY_ATTEMPTS=3

# ===== APPLICATION LIMITS =====
MAX_APPLICATIONS_PER_DAY=10
MIN_TIME_BETWEEN_APPLICATIONS=300
MAX_CONSECUTIVE_ERRORS=5

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== FEATURES =====
USE_AI_GENERATION=true
AUTO_LOGIN=true
MFA_MANUAL_ONLY=true
STORE_ANSWERS=true
